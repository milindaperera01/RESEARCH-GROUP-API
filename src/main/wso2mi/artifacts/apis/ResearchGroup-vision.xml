<?xml version="1.0" encoding="UTF-8"?>
<api name="ResearchGroup-vision" context="/research-group/v1/vision/" xmlns="http://ws.apache.org/ns/synapse">
    <resource methods="GET" uri-template="/">
        <inSequence>
            <call>
                <endpoint key="rg-computer-vision"/>
            </call>
            <datamapper config="resources:datamapper/details-mapper/details-mapper.dmc" inputSchema="resources:datamapper/details-mapper/details-mapper_inputSchema.json" outputSchema="resources:datamapper/details-mapper/details-mapper_outputSchema.json"/>
            <log category="INFO" logMessageID="true" logFullPayload="false">
                <message></message>
            </log>
            <respond/>
        </inSequence>
        <faultSequence>
        </faultSequence>
    </resource>
    <resource methods="GET" uri-template="/publications">
        <inSequence>
            <call description="filter publications using research group">
                <endpoint key="publications-filter-by-researchgroup"/>
            </call>
            <datamapper config="resources:datamapper/vision-publication-mapper/vision-publication-mapper.dmc" inputSchema="resources:datamapper/vision-publication-mapper/vision-publication-mapper_inputSchema.json" outputSchema="resources:datamapper/vision-publication-mapper/vision-publication-mapper_outputSchema.json"/>
            <log category="INFO" logMessageID="true" logFullPayload="false">
                <message></message>
            </log>
            <respond/>
        </inSequence>
        <faultSequence>
        </faultSequence>
    </resource>
</api>